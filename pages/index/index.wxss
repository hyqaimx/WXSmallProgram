/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
page{
  background: #f5f5f5;
}
swiper{
  width: 100%;
  height:300rpx;
}
swiper image{
  width: 100%;
  height:300rpx;
}
.mokuaia{
  display: flex;
  padding: 10px;
  text-align: center;
  background: #fff;
  align-items: center;
}
.mokuaia image{
  width: 35rpx;
  height: 35rpx;
  vertical-align: middle;
}
.mokuaia text{
  font-size: 25rpx;
  padding-left: 5px;
}
 .mokuaia .mokuaia_a,.mokuaia .mokuaia_b{
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
} 
.zhongxian{
  border-right: 1px solid #aaa;
}
.mokuaib{
  margin-top: 20rpx;
  display: flex;
  background: #fff;
  padding: 10px;
}
.mokuaib_img{
  width: 100rpx;
  height: 100rpx;
}
.mokuai_text{
  font-size: 30rpx;
  padding-left: 10px;

} 
.mokuai_texta{
  font-size: 20rpx;
  color: #989898;
  padding-top: 15px;
} 
