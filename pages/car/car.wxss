/* pages/car/car.wxss */
page {
  background: #f5f5f5;
}

.shangpuxiangqing {
  margin-bottom: 20rpx;
}

.dianjianniu {
  border-radius: 10rpx;
}

.shangpuxiangqing_a {
  display: flex;
  padding: 10rpx;
}

.button_quanbu {
  font-size: 22rpx;
  overflow: visible;
}

.button_biaoji {
  font-size: 22rpx;
  overflow: visible;
}

.shangpuxiangqing_dianpumingcheng {
  font-size: 25rpx;
}

.shangpingxiangqing {
  display: flex;
  padding: 10rpx;
  background: white;
  border-top: 1px solid #F5F5F5;
  align-items: center;
}

.shangpingxiangqing_img {
  width: 160rpx;
  height: 160rpx;
  display: block;
}

.shangpingxiangqing_b {
  flex: 1;
  padding-left: 8px;
}

.shangpingxiangqing_biaoti {
  font-size: 32rpx;
  font-weight: 600;
  padding-bottom: 10rpx;
  line-height: 34rpx;
  padding-top: 4rpx;
}

.shangpingxiangqing_text {
  font-size: 30rpx;
  display: -webkit-box;
  color: #AAA;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.shangpingxiangqing_c {
  width: 10%;
  text-align: right;
}

.shangpingjiage {
  font-size: 30rpx;
  color: red;
  font-weight: 600;
}

.false_jiemian {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  text-align: center;
}

.false_img {
  width: 250rpx;
  height: 250rpx;
}

.false_zi {
  font-size: 28rpx;
  color: #aaa;
}
.checkbox{width: 35rpx;height: 35rpx;border-radius: 50%;border: 1px solid #AAA;margin: 0 auto;}
.checked{position: relative;border: 1px solid #F34347;}
.checked::after{position: absolute;content: '\2713';top:0;left: 0;width: 35rpx;height: 35rpx;background: #F34347;border-radius: 50%;line-height: 35rpx;color: white;text-align: center;font-size: 30rpx;}
.settlement{position: fixed;width: 100%;background: white;bottom: 0;left: 0;}
.settleBtn{padding: 30rpx 10rpx;box-sizing: border-box;background: linear-gradient(to right,#F99A9D 0%,#F34347 123%);color: white;font-size: 32rpx;text-align: center;}
.deleteBtn{padding: 30rpx 10rpx;box-sizing: border-box;background: linear-gradient(to right,#FBB984 0%,#F88425 123%);color: white;font-size: 32rpx;text-align: center;}
.total-price{font-size: 32rpx;padding: 30rpx 10rpx;text-align: center;}
.total-price text{color: #F34347;}
