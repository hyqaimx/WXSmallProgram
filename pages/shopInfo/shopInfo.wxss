/* pages/shopInfo/shopInfo.wxss */
.top-contain{width: 100%;height: 300rpx;position: relative;background: url(http://pic.58pic.com/58pic/13/17/24/76h58PICMnI_1024.jpg);background-size: 100% 100%;}
.top-search{padding: 10rpx 20rpx;display: flex;width:100%;box-sizing: border-box;}
.top-search input{border-radius: 15px;width: 90%; background: white;padding: 0 20rpx;font-size: 30rpx;box-sizing: border-box;}
.right-types{flex: 1;text-align: center;color: white;}
.shopInfo{position: absolute;bottom: 0;padding: 15rpx;box-sizing: border-box;display: flex;}
.shopInfo-url{width: 120rpx;height: 120rpx;margin-right: 20rpx;}
.shopInfo-url image{width: 120rpx;height: 120rpx;}
.shopInfo-name{font-size: 32rpx;color: white;}
.shop-title{padding: 10rpx 20rpx;padding-left: 30rpx; font-size: 30rpx;font-weight: 600;position: relative;}
.shop-title::after{content: "";position: absolute;width: 3px;height: 50%;left: 15rpx;top:50%;transform: translateY(-50%); background: #F6797B;}
.zan-panel{margin-top: 0;}
.zan-tag{margin-right: 5rpx;}
.price{color: #F34347;font-weight: 600;}
.name{font-weight: 600;}
.zan-c-gray-darker{overflow: hidden;white-space: nowrap; text-overflow: ellipsis;}
.zan-card{padding: 5px 10px;}
.noThing{padding-top: 200rpx;text-align: center;}
.noThing image{width: 140rpx;height: 140rpx;margin: 0 auto;}
.noThing-tag{font-size: 32rpx;color: #AAA;text-align: center;}
